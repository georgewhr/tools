#!/bin/bash

#ps aux | head -n1 > host


while true
do


ps -eo pcpu,pmem,pid,args | sort -k 1 -r | head -6 >> host
echo -e "\n" >> host
       	

	cat /proc/loadavg >> host
	ps aux | head -n1 >> host



	for var in $@
        do
  
                
		
		ps aux | egrep -i "$var" | grep -v "egrep" | grep -v "bash" >> host
  	   
		
        	       

   
   

	done
   echo -e "\n" >> host

   
	sleep 2
done
